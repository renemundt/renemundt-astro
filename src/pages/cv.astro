---
import BaseLayout from '../layouts/BaseLayout.astro'
const pageTitle = 'Curriculum Vitae'
const metaDescription = 'René Mundt, curriculum vitae, cv, presentation, resume'
const today = new Date()
const birthDate = new Date('1975-10-17')
var age = today.getFullYear() - birthDate.getFullYear()
var m = today.getMonth() - birthDate.getMonth()
if (m < 0 || (m === 0 && today.getDate() < birthDate.getDate())) {
  age--
}
---

<BaseLayout pageTitle={pageTitle} metaDescription={metaDescription}>
  <h2>Personal information</h2>
  <div class="row">René Mundt</div>
  <div class="row">Sjællandsvej 3</div>
  <div class="row">4200 Slagelse</div>
  <a href="mailto: renem@live.dk">renem@live.dk</a>
  <div class="row">Age:{age}</div>
  <div class="row">Married: Yes</div>
  <div class="row">Children: 2</div>
  <div class="row">Drivers license: Yes</div>

  <h2>Education</h2>
  <div class="row">
    <div>HTX</div>
    <div class="period">1992-1995</div>
  </div>
  <div class="row">
    <div>HH</div>
    <div class="period">1995-1996</div>
  </div>
  <div class="row">
    <div>Procurement education F.L.Smidth</div>
    <div class="period">1996-1998</div>
  </div>
  <div class="row">
    <div>Datamatiker</div>
    <div class="period">1998-2000</div>
  </div>
  <div class="row">
    <div>Bachelor Computer Science IHK</div>
    <div class="period">2007-2012</div>
  </div>

  <h2>Job experience</h2>
  <div class="row">
    <div>System Developer / Consultant - Ementor</div>
    <div class="period">2000-2002</div>
  </div>
  <div class="row">
    <div>System Developer Novo Nordisk</div>
    <div class="period">2002-2004</div>
  </div>
  <div class="row">
    <div>System Developer - Region Sjælland</div>
    <div class="period">2004-2010</div>
  </div>
  <div class="row">
    <div>Full Stack Developer - Coop Danmark</div>
    <div class="period">2010-2012</div>
  </div>
  <div class="row">
    <div>Full Stack Developer - Thomas Cook Airlines</div>
    <div class="period">2012-2016</div>
  </div>
  <div class="row">
    <div>Full Stack / Frontend developer - DFDS</div>
    <div class="period">2016....</div>
  </div>

  <h2>Experience</h2>
  <table class="css-1y62bwo-Experience">
    <thead>
      <tr>
        <th>Category</th>
        <th>Technology</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>Frontend/Web</td>
        <td>ASP.NET MVC/WebForms, Angular2+, Reactjs, npm, Javascript, Typescript, Angularjs, Jest, Jasmine, Nightwatch, Cypress.io</td>
      </tr>
      <tr>
        <td>Backend</td>
        <td
          >Nuget, WebApi, Console applications, WPF, Microsoft Forms, Unit testing, SQL, SQL Server Management Studio, Nodejs, IoC, AWS,
          DynamoDB, CosmosDb, Elastic Search (ELK), NHibernate, Design patterns</td
        >
      </tr>
      <tr>
        <td>Tools</td>
        <td
          >Visual Studio, Visual Studio Code, Fiddler, Postman, Google Chrome Developer Tools, git, Sourcetree, github, TFS, NPM, Powershell</td
        >
      </tr>
      <tr>
        <td>Infrastructure</td>
        <td>Windows Server, IIS, AWS S3, AWS Cloudfront, AWS lambda functions, IaC (Terraform, AWS CLI), Azure DevOps</td>
      </tr>
      <tr>
        <td>CI/CD</td>
        <td>Azure DevOps, Octopus, Jenkins, Github actions</td>
      </tr>
      <tr>
        <td>Other</td>
        <td>Technical project management, Business and Architecture understanding, Scrum, Coordination, Team management</td>
      </tr>
    </tbody>
  </table>
  <h2>Languages</h2>
  <div class="row">
    <div class="language">Danish</div>
    <div>Fluent (speech and writing)</div>
  </div>
  <div class="row">
    <div class="language">English</div>
    <div>Fluent (speech and writing)</div>
  </div>
  <div class="row">
    <div class="language">Swedish / Norwegian</div>
    <div>Understands speech and writing</div>
  </div>
</BaseLayout><div class="css-emdfx1-Col">
  <style>
    h2 {
      margin-block-end: 0;
    }
    table {
      border-collapse: collapse;
    }
    th,
    td {
      text-align: left;
      border: 1px solid;
      padding: 10px;
    }
    .row {
      display: flex;
      justify-content: space-between;
      margin-bottom: 3px;
    }
    .period {
      min-width: 80px;
      margin-left: 20px;
      display: flex;
      align-items: flex-end;
    }
    .language {
      min-width: 100px;
    }
  </style>

  <script is:inline>
    const ageElement = this.querySelector('div.age')
    ageElement.innerHTML = `Age: ${new Date() - new Date('1975-10-17')}`
  </script>
</div>
